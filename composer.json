{
    "name": "lemmon/kirby-portfolio",
    "type": "project",
    "description": "Free customizable portfolio theme for Kirby CMS.",
    "keywords": [
        "kirby",
        "cms",
        "template",
        "theme"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.4.0 <8.2.0",
        "getkirby/cms": "^3.6",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.4"
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    },
    "scripts": {
        "start": [
          "Composer\\Config::disableProcessTimeout",
          "@php -S localhost:8008 kirby/router.php"
        ]
    }
}
