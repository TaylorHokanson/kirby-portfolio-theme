<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{% block title %}{{ page.title }} &ndash; {{ site.title }}{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <link rel="stylesheet" href="{{ kirby.url }}/static/master.css">
  <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
</head>
<body class="body my1 py05 lh4">

  <header>
    <div class="py05 sd-p05">
      {% with { logo: site.images.filterBy('template', 'logo').first } %}
      {% if logo %}
      <figure class="p1"><a
        class="block"
        href="{{ kirby.url }}"
        style="width: {{ logo.width }}px; max-width: 100%; height: auto;"
      ><img
        class="block w100 ha"
        src="{{ logo.url }}"
        width="{{ logo.width }}"
        height="{{ logo.height }}"
        alt="{{ site.title }}"
      ></a></figure>
      {% else %}
      <h1 class="p1"><a class="inline-block bold" href="{{ kirby.url }}">{{ site.title }}</a></h1>
      {% endif %}
      {% endwith %}
    </div>
    {% if site.description.notEmpty %}
    <div class="py05 sd-p05">
      <aside class="copy p1">
        {{ site.description | kt }}
      </aside>
    </div>
    {% endif %}
    <nav class="py05 sd-p05">
      <ul class="p1">
        {% for _page in site.pages.listed %}
        <li><a class="inline-block ul:hover{% if _page.id == page.id %} bg-yellow{% endif %}" href="{{ _page.url }}">{{ _page.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
  </header>

  <main class="main py05 sd-p05">

    {% block main none %}

  </main>

  {% if site.footer.notEmpty %}
  <footer class="py05 sd-p05">
    <div class="p1">
      <p>{{ site.footer | kt }}</p>
    </div>
  </footer>
  {% endif %}

</body>
</html>
